# ===========================================
# Eureka Service Discovery Configuration
# ===========================================

# Eureka server URL (Spring Cloud Eureka)
EUREKA_SERVER=http://localhost:8761/eureka/

# Service name registered in Eureka
APP_NAME=python-rag-service

# FastAPI server port
APP_PORT=8000

# Instance configuration (optional - auto-detect if not set)
# INSTANCE_HOST=localhost
# INSTANCE_IP=127.0.0.1

# ===========================================
# RAG Configuration
# ===========================================

# LLM Configuration
LLM_TYPE=ollama
MODEL_NAME=llama3.2:3b

# Vector Store
VECTOR_STORE_PATH=data/vectorstores
COLLECTION_NAME=sgk_tin

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DEVICE=cuda

# ===========================================
# API Configuration
# ===========================================

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# Log level
LOG_LEVEL=INFO
