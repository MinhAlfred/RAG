# ===========================================
# Docker Deployment Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# API Security (REQUIRED)
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
RAG_API_KEY=your-secure-api-key-here

# ===========================================
# LLM Configuration
# ===========================================
LLM_TYPE=gemini
MODEL_NAME=gemini-2.5-flash

# Google Gemini API Key
GOOGLE_API_KEY=your-google-api-key-here

# Optional: OpenAI API Key (if using OpenAI)
# OPENAI_API_KEY=sk-...

# ===========================================
# Qdrant Cloud Configuration
# ===========================================
QDRANT_URL=https://your-cluster-id.region.aws.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_PREFER_GRPC=false

# Collection name
COLLECTION_NAME_PREFIX=sgk_tin

# ===========================================
# Supabase PostgreSQL Configuration
# ===========================================
# Option 1: Connection string (recommended for production)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Option 2: Separate parameters (alternative)
user=postgres.projectref
password=your-password
host=aws-region.pooler.supabase.com
port=5432
dbname=postgres

# ===========================================
# Embedding Configuration
# ===========================================
EMBEDDING_MODEL=multilingual
EMBEDDING_DEVICE=cpu

# ===========================================
# API Configuration
# ===========================================
CORS_ORIGINS=*
LOG_LEVEL=INFO
DEBUG=false

# ===========================================
# Optional: Service Discovery
# ===========================================
# EUREKA_SERVER=http://eureka:8761/eureka/
# APP_NAME=python-rag-service
# APP_PORT=8000
